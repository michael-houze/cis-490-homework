<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="#B8B8D4"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageRock"
        android:src="@drawable/rock"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomRow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageRock"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagePaper"
            android:src="@drawable/paper"
            android:layout_below="@id/imageRock"
            android:paddingRight="@dimen/activity_vertical_margin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageScissors"
            android:src="@drawable/scissors"
            android:layout_alignBottom="@id/imagePaper"
            android:paddingLeft="@dimen/activity_vertical_margin"
            />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainHeader"
        android:text="@string/main_header"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_below="@id/bottomRow"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:fontFamily="sans-serif-light"
        />

</RelativeLayout>
