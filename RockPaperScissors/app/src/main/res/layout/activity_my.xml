<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context=".MyActivity">

    <TextView android:id="@+id/user_wins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/user_wins"
        android:textSize="28sp"/>

    <TextView android:id="@+id/opponent_wins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/opponent_wins"
        android:textSize="28sp"/>

    <TextView android:id="@+id/user_throw_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80sp"
        android:layout_marginBottom="10sp"
        android:hint="@string/user_throw_header"
        android:textSize="34sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView android:id="@+id/user_rock_image"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/rock"/>

        <ImageView android:id="@+id/user_paper_image"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/paper"/>

        <ImageView android:id="@+id/user_scissors_image"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/scissors"/>
       </LinearLayout>

    <TextView android:id="@+id/opponent_throw_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="10sp"
        android:hint="@string/opponent_throw_header"
        android:textSize="34sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:gravity="center"
        android:orientation="horizontal">

    <ImageView android:id="@+id/opponent_throw_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/scissors"/>

     </LinearLayout>

</LinearLayout>
